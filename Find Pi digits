def pi():
    while True:
        
        try:
            w=int(input('Enter how many digits of pi you want after the decimal (Up to 25): '))
            if w>25:
                print('Only up to 25!')
                continue
        except ValueError:
            print('Only numbers are allowed!')
        else:
            e='1415926535897932384626433'
            t=e[0:w]
            return float(f'3.{t}')
