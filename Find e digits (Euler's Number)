def e():
    while True:
        
        try:
            w=int(input('Enter how many digits of e you want after the decimal (Up to 25): '))
            if w>25:
                print('Only up to 25!')
                continue
        except ValueError:
            print('Only numbers are allowed!')
        else:
            e='7182818284590452353602874'
            t=e[0:w]
            return float(f'2.{t}')
